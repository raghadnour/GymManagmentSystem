@model TrainerViewModel
<div class="container">
    <main role="main" class="pb-3">

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-primary-color text-white text-center py-5">
                            <i class="bi bi-person-badge display-4 mb-3"></i>
                            <h2 class="mb-0">@Model.Name</h2>
                            <span class="badge bg-light text-primary-color mt-2">@Model.Specialities.ToString()</span>
                        </div>
                        <div class="card-body p-4">
                            <div class="plan-details">
                                <div class="detail-item mb-4">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-box me-3">
                                            <i class="bi bi-envelope text-primary-color fs-4"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 text-muted">Email</h6>
                                            <p class="mb-0 fw-bold">@Model.Email</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="detail-item mb-4">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-box me-3">
                                            <i class="bi bi-telephone text-primary-color fs-4"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 text-muted">Phone</h6>
                                            <p class="mb-0 fw-bold">@Model.Phone</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="detail-item mb-4">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-box me-3">
                                            <i class="bi bi-calendar-date text-primary-color fs-4"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 text-muted">Date Of Birth</h6>
                                            <p class="mb-0 fw-bold">@Model.DateOfBirth</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="detail-item mb-4">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-box me-3">
                                            <i class="bi bi-geo-alt text-primary-color fs-4"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 text-muted">Address</h6>
                                            <p class="mb-0 fw-bold">@Model.Address</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between gap-2 px-3 pb-3">
                                    <a asp-Controller="Trainer" asp-Action="Index" class="btn btn-fill flex-fill">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </main>
</div>