@using GymManagmentBLL.ViewModels.MemberSessionViewModels
@model IEnumerable<GetMembersForOngoingSession>
@{
    ViewData["Title"] = "MemberSession";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div id="Alert" class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<header class="bg-success text-white rounded-3 p-4 shadow-sm mt-5 mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 fw-semibold">Session Members</h2>
            <p class="mb-0 text-light opacity-75">Members Attendance</p>
        </div>
    </div>
</header>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-success">
                    <tr>
                        <th>Member</th>
                        <th>Attendance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@member.MemberName</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    @if (member.Attendanse)
                                    {
                                        <form asp-action="MarkAsAttended"
                                              asp-controller="MemberSession"
                                              method="post"
                                              class="d-inline">
                                            <input type="hidden" name="sessionId" value="@member.SessionId" />
                                            <input type="hidden" name="memberId" value="@member.MemberId" />
                                            <button type="submit" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-check-circle me-1"></i> Attended
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="MarkAsAttended"
                                              asp-controller="MemberSession"
                                              method="post"
                                              class="d-inline">
                                            <input type="hidden" name="sessionId" value="@member.SessionId" />
                                            <input type="hidden" name="memberId" value="@member.MemberId" />
                                            <button type="submit" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-check-circle me-1"></i> Mark as Attended
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-person-workspace display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Members Available</h4>
            </div>
        }
    </div>

    <div class="card-footer bg-white border-0 text-end p-3">
        <a asp-controller="MemberSession" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_AlertBoxScript"/>
}
