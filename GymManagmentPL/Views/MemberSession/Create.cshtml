@using GymManagmentBLL.ViewModels.MemberSessionViewModels
@model BookingSessionViewModel
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create New Booking</h1>
<hr />

<div class="row">
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Booking Information</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="SessionId" value="@ViewBag.SessionId" />

                        <div class="mb-3">
                            <label asp-for="MemberId" class="form-label">Member</label>
                            <select asp-for="MemberId" asp-items="ViewBag.Members" class="form-select">
                                <option value="">-- Select Member --</option>
                            </select>
                            <span asp-validation-for="MemberId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Booking
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
