
@model MemberViewModel
@{
    ViewData["Title"] = "Member Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <main role="main" class="pb-3">


        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card card-details border-0 p-2 shadow">
                        <div class="text-center mt-3">
                            <img src="~/images/@Model.Photo" alt="MemberName" class="rounded-circle"
                                 style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff; margin-top: -60px;" />
                        </div>
                        <div class="card-body text-center">
                            <h2 class="mb-1 text-primary-color">@Model.Name</h2>
                            <h4 class="mb-2 pb-1 border-bottom d-block">@(Model.PlanName ?? "No Active Plans")</h4>
                            <div class="mt-4 text-start">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Email</small>
                                            <strong>@Model.Email</strong>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Phone</small>
                                            <strong>@Model.Phone</strong>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Gender</small>
                                            <strong>@Model.Gender</strong>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Date of Birth</small>
                                            <strong>@Model.DateOfBirth</strong>
                                        </div>
                                    </div>
                                    @if (Model.PlanName is not null)
                                     {
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Membership Start Date</small>
                                            <strong>@Model.MembershipStartDate</strong>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Membership End Date</small>
                                                <strong>@Model.MembershipEndDate</strong>
                                        </div>
                                    </div>
                                    }


                                    <div class="col-12">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Address</small>
                                            <strong>@Model.Address</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between gap-2 px-3 pb-3">
                            <a href="\Member\Index" class="btn btn-fill flex-fill">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>
</div>